<turbo-frame aria-labelledby="password-submit" id="authentication-form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), 
    html: { id: "new-password", class: "new-password", method: :post, :"aria-label" => t(:".form_aria") }) do |f| %>
    <%# render "devise/shared/error_messages", resource: resource %>
    <div>
      <%= f.email_field :email, 
        autocomplete: "email", 
        placeholder: t(:".email"), 
        :"aria-label" => t(:".email_aria") %>
      <%= render_errors(resource, :email) %>
    </div>
  <% end %>

  <h2 class="wrapper">
    <button id="password-submit" class="selected wrappable" type="submit" form="new-password" data-turbo-frame="_top">
      <%= t(:".restore_password_html") %>
    </button>
  </h2>
  
  <%= render "devise/shared/links" %>
  <%= link_to t(:".back"), new_session_path(resource_name, params: { locale: I18n.locale }), class: "button wrappable"" %>
</turbo-frame>