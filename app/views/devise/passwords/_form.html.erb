<turbo-frame id="authentication-form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { id: "new-password", class: "new-password", method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Эмейл", aria_label: "Электронная почта" %>
  <% end %>

  <input class="selected" type="submit" form="new-password" value="Напомнить пароль">
  
  <%= render "devise/shared/links" %>
  <%= link_to "Нет, вспомнил", new_session_path(resource_name), class: "button", data: { turbo_action: :advance } %>
</turbo-frame>