<turbo-frame id="authentication-form">
  <%= form_for(resource, url: registration_path(resource_name), html: { id: "new-registration", class: "new-registration" }) do |f| %>
    <%# render "devise/shared/error_messages", resource: resource %>
    <div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Эмейл", aria_label: "Электронный адрес" %>
      <%= render_errors(resource, :email) %>
    </div>
  
    <div>
      <%= f.text_field :username, autocomplete: "username", placeholder: "Имя", aria_label: "Имя пользователя" %>
      <%= render_errors(resource, :username) %>
    </div>
  
    <div>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Пароль", aria_label: "Пароль (минимум #{@minimum_password_length} знаков)" %>
      <%= render_errors(resource, :password) %>
    </div>
  
    <div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Ещё раз", aria_label: "Подтвердите пароль" %>
      <%= render_errors(resource, :password_confirmation) %>
    </div>
  <% end %>

   <input type="submit" form="new-registration" value="Создать" data-turbo-frame="_top">

  <%= render "devise/shared/links" %>
</turbo-frame>