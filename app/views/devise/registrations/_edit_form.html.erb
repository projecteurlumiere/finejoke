<turbo-frame id="summary" 
  data-controller="profile-edit" 
  data-two-containers-target="leftContainer">
  <h2 class="black">
    <%= t(".edit") %>
  </h2>
  <%= form_with(url: registration_path(resource_name), 
        method: :delete, 
        html: { 
          id: "delete-account",
          data: { 
            profile_edit_target: "deleteForm", 
            action: "profile-edit#submitDeleteForm" } 
        }) do |f| %>
    <%= f.hidden_field :current_password, name: "user[current_password]", 
      data: { profile_edit_target: "passwordHiddenField" } %>
    <% @delete_account_password_errors = render_errors(resource, :current_password) %>
  <% end %>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
        html: { 
          id: "edit-registration", 
          class: "form-large", 
          method: :put,
          data: { profile_edit_target: "editForm" }
        }) do |f| %>
    <%# render "devise/shared/error_messages", resource: resource %>
    
    <fieldset>
      <legend>
        <%= t(".important_settings") %>
      </legend>
      <div>
        <%= f.text_field :username, 
          value: nil, 
          placeholder: t(".new_username"), 
          aria_label: t(".new_username_aria"), 
          autocomplete: "off",
          minlength: 1,
          maxlength: 14 %>
        <%= render_errors(resource, :username) %>
      </div>

      <div>
        <%= f.email_field :email, 
          value: nil, 
          placeholder: t(".new_email"), 
          aria_label: t(".new_email_aria"), 
          autocomplete: "off" %>
        <%= render_errors(resource, :email) %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Ждём подтверждения <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div>
        <%= f.password_field :password, 
          placeholder: t(".new_password"), 
          aria_label: t(".new_password_aria"), 
          autocomplete: "new-password",
          minlength: 8,
          maxlength: 128 %>
        <%= render_errors(resource, :password) %>
      </div>

      <div>
        <%= f.password_field :password_confirmation, 
          placeholder: t(".confirm_password"), 
          aria_label: t(".confirm_password_aria"), 
          autocomplete: "new-password",
          minlength: 8,
          maxlength: 128 %>
        <%= render_errors(resource, :password_confirmation) %>
      </div>

      <div class="delete-account">
        <input type="submit" 
          class="unstyled red" 
          form="delete-account" 
          value="<%= t(".delete_account") %>" 
          data-turbo-confirm="<%= t(".delete_account_prompt") %>">
      </div>
    </fieldset>

    <fieldset class="switch-container">
      <legend>
        <%= t(".privacy_settings") %>
      </legend>
      <div>
        <div>
          <%= t(".show_jokes") %>
        </div>
         <div class="switch">
          <%= f.label :show_jokes_allowed, 
            aria_label: t(".show_jokes"), 
            style: "display: block" do %>
            <%= f.check_box :show_jokes_allowed %>
            <span class="slider"></span>
          <% end %>
        </div>
      </div>

      <div>
        <div>
          <%= t(".show_awards") %>
        </div>
         <div class="switch">
          <%= f.label :show_awards_allowed, 
            aria_label: t(".show_awards"), 
            style: "display: block" do %>
            <%= f.check_box :show_awards_allowed %>
            <span class="slider"></span>
          <% end %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <legend>
        <%= t(".confirm") %>
      </legend>
      <div>
        <%= f.password_field :current_password, 
          required: true,
          maxlength: 128,
          placeholder: t(".current_password"), 
          autocomplete: "password",
          aria_label: t(".current_password_aria"),
          data: { 
            profile_edit_target: "passwordField", 
            action: "profile-edit#copyPassword" } %>
        <%= @delete_account_password_errors || render_errors(resource, :current_password) %>
      </div>
    </fieldset>
  <% end %>

  <div class="buttons-container">
    <input type="submit" 
      form="edit-registration" 
      value="<%= t(".save") %>" 
      class="highlighted">
    <%= link_to t(".back"), 
      profile_path(current_or_guest_user), 
      class: "button", 
      data: { turbo_action: :advance } %>
  </div>
</turbo-frame>