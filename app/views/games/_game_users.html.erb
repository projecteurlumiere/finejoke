<ul id="user-list">
  <% locals = { game: game } %>
  <% locals.merge!({votes_change: votes_change.transform_keys(&:to_i)}) if defined? votes_change %>

  <%= render partial: "games/game_user", 
             formats: %i[html],
             collection: game.users.order(current_score: :desc).to_a + Array.new((game.max_players - game.n_players), nil),
             as: :user, 
             locals: locals %>
</ul>
