<% content_for(:main_class, :lobby) %>

<%= turbo_stream_from "lobby", channel: LobbyChannel %>

<div id="lobby" class="two-columns" data-controller="catalogue new-game two-containers">  
  <div id="catalogue" class="bg-red" data-two-containers-target="leftContainer">
    <h2 class="hidden-when-mobile">Комнаты</h2>
    
    <ul id="games">
      <%= render partial: "game_entry", collection: @games, as: :game %>
    </ul>
  </div>
  
    
  <div class="hidden-when-mobile form" data-two-containers-target="rightContainer">
    <h2 class="hidden-when-mobile">Новая игра</h2>
    <%= render partial: "form", locals: { game: @game } %>
  </div>

  <div class="buttons-container" data-two-containers-target="leftContainer">
    <a class="button disabled" data-catalogue-target="connect">Подключиться</a>
    <a class="button disabled" data-catalogue-target="view">Смотреть</a>
  </div>

  <div class="buttons-container hidden-when-mobile" data-two-containers-target="rightContainer">
    <input type="submit" form="new-game" value="Создать" data-action="click->new-game#validate">
  </div>

  <div class="buttons-container mobile-navigation">
    <a class="button selected" data-two-containers-target="leftContainerButton" data-action="click->two-containers#showLeftContainer">Комнаты</a>
    <a class="button" data-two-containers-target="rightContainerButton" data-action="click->two-containers#showRightContainer">Создать</a>
  </div>
</div>