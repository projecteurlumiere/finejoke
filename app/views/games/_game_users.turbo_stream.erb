<% game = Game.find_by(id: game_id) %>

<% if game %>
  <%= turbo_stream.action(:replace, "user-list") do %>
    <ul id="user-list">
      <%= render partial: "games/game_user", collection: game.users.order(current_score: :desc), as: :user, locals: { game: game } %>
    </ul>  
  <% end %>
<% end %>
