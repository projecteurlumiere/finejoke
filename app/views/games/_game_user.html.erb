<%= tag.li id: dom_id(user), 
           data: { 
             host: user.host?,
             vote_change: (votes_change[user.id] if defined? votes_change), 
             lead: user.lead?,
             finished_turn: user.finished_turn?,
             voted: user.voted? } do %>
  <%= link_to user.username, profile_path(user) %> and his score: <%= user.current_score %>
  / 
  <%= votes_change[user.id] if defined? votes_change %>
  /
  <%= button_to("Kick", game_kick_path(game, params: { user_id: user.id })) %>
<% end %>