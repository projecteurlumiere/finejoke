<%= tag.turbo_frame id: "current-round" do %>
  <%= tag.div data: round_data_attributes(round) %>

  <h3 class="stage">
    <%= round.stage %>
  </h3>
  <div class="task">
    <p>
      <%= round_task_for(current_or_guest_user, round) %>
    </p>
    <% if round.setup %>
      Завязка:
      <br>
      <%= round.setup %>
    <% end %>
  </div>
  <div class="action">
    <%= render_action_for(current_or_guest_user, round) %>
  </div>
<% end %>