<!DOCTYPE html>
<html>
  <head>
    <title>Finejoke</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="turbo-prefetch" content="false">
    <meta name="turbo-cache-control" content="no-cache">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar">
      <div class="navbar-end">
        <% if user_signed_in? %>
          <div class="navbar-item">Logged in as <strong><%= current_user.email %></strong></div>
          <%= link_to "Edit profile", edit_user_registration_path, class: "navbar-item" %>
          <%= link_to "Logout", destroy_user_session_path, class: "navbar-item", 
                                                            data: { turbo_method: :delete }  %>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path, class: "navbar-item" %>
          <%= link_to "Login", new_user_session_path, class: "navbar-item"  %>
        <% end %>
      </div>
    </nav>
    <div id="flash">
      <% if flash[:notice] %>
        <div class="message is-info level-item">
          <div class="message-body">
            <%= flash[:notice] %>
          </div>
        </div>
        <% end %>
      <% if flash[:alert] %>
        <div class="message is-warning level-item">
          <div class="message-body">
            <%= flash[:alert] %>
          </div>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
