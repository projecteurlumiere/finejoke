<div id="user-status">
  <% if game&.persisted? %>
    <% if current_page?(game_path(game)) %>
      <%= button_to "Выход", game_leave_path(game) %>
    <% else %>
      <%= link_to "В игре", game_path(game), class: :button %>
    <% end %>
  <% else %>
    <%= yield(:nav_button) %>
  <% end %>
</div>

