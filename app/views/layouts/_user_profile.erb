<% unless new_guest? || (%w[sessions registrations].include?(controller_name) && !current_page?(edit_self_profile_path)) %>
  <div class="profile"><%= link_to current_or_guest_user.username.truncate(16), profile_path(current_or_guest_user) %></div>
  <div class="profile-short"><%= link_to current_or_guest_user.username[0], profile_path(current_or_guest_user) %></div>
  <% if current_or_guest_user.guest? %>
    <div class="notice">
      Вы гость. 
      <%= link_to "Войти?", new_user_registration_path %>
    </div>
  <% end %>
<% end %>
