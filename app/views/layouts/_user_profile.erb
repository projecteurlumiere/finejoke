<% unless new_guest? || %w[sessions registrations].include?(controller_name) %>
  <div class="profile"><%= link_to current_or_guest_user.username.truncate(16), self_profile_path %></div>
  <div class="profile-short"><%= link_to current_or_guest_user.username[0], self_profile_path %></div>
  <% if current_or_guest_user.guest? %>
    <div class="notice">
      Вы гость. 
      <%= link_to "Войти?", new_user_registration_path %>
    </div>
  <% end %>
<% end %>
